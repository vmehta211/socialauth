extends layout

block content
  #page-content-wrapper
    .page-content.inset
      .row
        a#menu-toggle.btn.btn-default(href='#')
          i.fa.fa-bars
        .col-md-12
          h1 Take a Picture 
          p Authenticate with your favorite social networks
          a(href="/") Go home
          br
          a(href="/auth/facebook") Link with Facebook
          br
          a(href="/auth/twitter") Link with Twitter
  div#debug 
    span Debug Message: 
    input#outgoingChatMessage
    br
    ul#incomingChatMessages
    
  script.
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("active");
    });



